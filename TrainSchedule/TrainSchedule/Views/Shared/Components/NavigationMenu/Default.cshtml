@model IEnumerable<string>

<div class="sidebar">
    <h5>Типи</h5>
    <ul class="nav flex-column">
        <li class="nav-item">
            <a class="nav-link @(string.IsNullOrEmpty(ViewBag.SelectedType) ? "active" : "")"
               asp-controller="Home"
               asp-action="Index"
               asp-route-type="">
                Усі
            </a>
        </li>

        @foreach (var t in Model)
        {
            <li class="nav-item">
                <a class="nav-link @(string.Equals((string)ViewBag.SelectedType, t, StringComparison.OrdinalIgnoreCase) ? "active" : "")"
                   asp-controller="Home"
                   asp-action="Index"
                   asp-route-type="@t">
                    @t
                </a>
            </li>
        }
    </ul>
</div>