@model TrainSchedule.Models.Platform

@{
    ViewData["Title"] = "Деталі";
}

<div class="container mt-4">
    <h2>Деталі поїзда</h2>

    <table class="table table-bordered">
        <tr><th>ID</th><td>@Model.Id</td></tr>
        <tr><th>Номер платформи</th><td>@Model.PlatformNumber</td>
        <tr><th>Назва Станції</th><td>@Model.StationName</td></tr>
        
    </table>

    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Редагувати</a>
    <a asp-action="Index" class="btn btn-secondary">Назад</a>
</div>
