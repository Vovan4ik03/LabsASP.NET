@model TrainSchedule.Models.Platform
@{
    ViewData["Title"] = "Видалити платформу";
}

<div class="container mt-4">
    <h2>Видалити платформу</h2>

    <div class="alert alert-danger">
        Ви впевнені, що хочете видалити цю платформу?
    </div>

    <table class="table table-bordered">
        <tr><th>ID</th><td>@Model.Id</td></tr>
        <tr><th>Номер Платформи</th><td>@Model.PlatformNumber</td></tr>
        <tr><th>Назва Станції</th><td>@Model.StationName</td></tr>
    </table>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Видалити</button>
        <a asp-action="Index" class="btn btn-secondary">Скасувати</a>
    </form>
</div>
